    "description": "The Hoa\\Console Symfony 2 bundle.",
    "type"       : "symfony-bundle",
    "keywords"   : ["library", "hoa", "bundle", "symfony", "console"],
    "homepage"   : "http://hoa-project.net/",
    "license"    : "BSD-3-Clause",
    "authors"    : [
        {
            "name" : "Julien Bianchi",
            "email": "julien.bianchi@hoa-project.net"
        },
        {
            "name" : "Ivan Enderlin",
            "email": "ivan.enderlin@hoa-project.net"
        },
        {
            "name"    : "Hoa community",
            "homepage": "http://hoa-project.net/"
        }
    ],
    "support": {
        "email" : "support@lists.hoa-project.net",
        "irc"   : "irc://irc.freenode.org/hoaproject",
        "source": "http://git.hoa-project.net/"
    },
    "require": {
        "php"                           : ">=5.3.3",
        "hoathis/symfony-console-bridge": "~1.0",
        "symfony/http-kernel"           : "~2.3,>=2.3.6|~3.0.0",
        "symfony/console"               : "~2.3,>=2.3.6|~3.0.0",
        "symfony/config"                : "~2.3,>=2.3.6|~3.0.0",
        "symfony/dependency-injection"  : "~2.3,>=2.3.6|~3.0.0"
    },
    "require-dev": {
        "atoum/atoum"                : "~1.0",
        "symfony/expression-language": "~2.4"
